<div class="container-fluid">
    <div class="page-header">
        <div class="pull-right">
            <% unless api_status == "Online" %>
            <%= image_tag("/icons/active/il.png", class: "logo-image-mp img-responsive center-block") %>
            <% end %>
        </div>
        <% if !@config.user.picture.nil? %>
        <h1><img class="img-thumbnail img-circle" width="100" height="100" src="<%= @config.user.picture %>" alt="User Profile Picture"> User <small>Profile</small></h1>
        <% else %>
        <h1><i class="fa fa-user fa-5x text-primary"></i> User <small>Profile</small></h1>
        <% end %>

        <div class="login-alert-partial">
            <%= erb :'partials/_login_alert', :layout => false if logged_in? %>

        </div>

    </div>
</div>

<!-- /////////////////////////////////// Insert Body Content Here /////////////////////////////////// -->
<div class='container-body'>

    <!-- Boxes -->  <div class="row">
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-home fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge"><%= @counts[:homes] %></div>
                        <div>Properties</div>
                    </div>
                </div>
            </div>
            <a href="/user/<%= @config.user.id %>/home/new">
                <div class="panel-footer">
                    <span class="pull-left">New Property</span>
                    <span class="pull-right"><i class="fa fa-plus"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
            <a href="/user/<%= @config.user.id %>/home/show">
                <div class="panel-footer">
                    <span class="pull-left">View Properties</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-hotel fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge"><%= @counts[:rooms] %></div>
                        <div>Rooms</div>
                    </div>
                </div>
            </div>
            <a href="/user/<%= @config.user.id %>/room/new">
                <div class="panel-footer">
                    <span class="pull-left">New Room</span>
                    <span class="pull-right"><i class="fa fa-plus"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
            <a href="/user/<%= @config.user.id %>/room/show">
                <div class="panel-footer">
                    <span class="pull-left">View Rooms</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-lightbulb-o fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge"><%= @counts[:devices] %></div>
                        <div>Devices</div>
                    </div>
                </div>
            </div>
            <a href="/user/<%= @config.user.id %>/device/new/form">
                <div class="panel-footer">
                    <span class="pull-left">New Device</span>
                    <span class="pull-right"><i class="fa fa-plus"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
            <a href="/user/<%= @config.user.id %>/device/show">
                <div class="panel-footer">
                    <span class="pull-left">View Devices</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
            <a href="/user/<%= @config.user.id %>/device/show/favorites">
                <div class="panel-footer">
                    <span class="pull-left">Favorite Devices</span>
                    <span class="pull-right"><i class="fa fa-thumbs-up"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-red">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-calendar fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">0</div>
                        <div>Schedules</div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</div>
</div>
