<!DOCTYPE html>
<html>
<head>
  <title>SmartSync</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if session[:user_id] %>
    Signed in as <%= User.find(session[:user_id]).name %> | <%= link_to "Logout", '/logout' %>
  <% else %>
    <%= link_to 'Login', '/login' %> | <%= link_to 'Register', '/users/new' %>
  <% end %>

<%= yield %>

</body>
</html>
