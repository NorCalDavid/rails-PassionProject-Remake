<div class="container-fluid">
    <div class="page-header">
        <h1><i class="fa fa-user fa-5x text-primary"></i> User <small>Login</small></h1>
    </div>
</div>

<!-- /////////////////// Insert Body Content Here /////////////////// -->
<div class='container-body'>
    <%= form_tag '/login' do %><!-- Begin # Login Form -->
    <fieldset>
        <div>
            <div class="col-md-7">
                <legend>
                    <h4><i class="fa fa-chevron-right fa-1x"></i> Login:<small>  Enter your email and password</small></h4>
                </legend>

                <div class="form-group">
                    <label class="small">Email Address (Required)</label>
                    <%= text_field_tag :email %>
                </div>

                <div class="form-group">
                    <label class="small">Password (Required)</label>
                    <%= password_field_tag :password %>
                </div>

                <%= button_tag(type: 'submit', class: 'btn btn-lg btn-social btn-primary') do %>
                <i class="fa fa-lock"></i> Login
                <% end %>

            </div>
        </div>
    </fieldset>
    <% end %><!-- End # Login Form -->

    <!-- /////////////////// End Partial Form /////////////////// -->

</div>


